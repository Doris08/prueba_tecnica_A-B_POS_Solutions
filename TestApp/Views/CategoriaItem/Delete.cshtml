@model TestApp.Models.CategoriaItem

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow-lg p-3 mb-3 bg-white rounded">
    <div class="card-body">
        <h1>Eliminar</h1>

        <h3>Desea eliminar esta categoría?</h3>
        <div>
            <h4>Categoría</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                
                <div class="row py-2">
                    <a asp-action="Index" class="text-decoration-none  mt-2 text-secondary">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>