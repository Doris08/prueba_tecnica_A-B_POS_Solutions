@model IEnumerable<TestApp.Models.CategoriaItem>

@{
    ViewData["Title"] = "Index";
}


<div class="card shadow-lg p-3 mb-3 bg-white rounded">
    <div class="card-body">
       
        <h1>Categorías</h1>

        <p>
            <a asp-action="Create" class="btn btn-success">
               Agregar
            </a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info"> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary"> Mostrar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"> Eliminar</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>

    </div>
</div>
